<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/ic_border_bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/round"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_item_icon"
            android:orientation="horizontal" >
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recycler_ean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/recycler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_of_product"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/recycler_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_of_product"
                android:textSize="15sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/recycler_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_of_product"
                android:textSize="15sp"
                android:textColor="@color/teal_700"/>
        </LinearLayout>
    </LinearLayout>
</layout>